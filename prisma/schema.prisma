generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float
  tag         category
  comments    Comment[] @relation("ProductComments")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Article {
  id        String    @id @default(uuid())
  title     String
  content   String?
  comments  Comment[] @relation("ArticleComments")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  productId String?
  articleId String?
  boardType String
  createdAt DateTime @default(now())

  product Product? @relation("ProductComments", fields: [productId], references: [id], onDelete: SetNull)
  article Article? @relation("ArticleComments", fields: [articleId], references: [id], onDelete: SetNull)
}

enum category {
  FASHION
  BEAUTY
  SPORTS
  ELECTRONICS
  HOME_INTERIOR
  HOUSEHOLD_SUPPLIES
  KITCHENWARE
}
